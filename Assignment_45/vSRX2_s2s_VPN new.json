version 12.1X46-D30.2;
/* Daniel SRX-B */
system {
    host-name SRX-B;
    root-authentication {
        encrypted-password "$1$4TkbZDtp$6E8C6Bg7K6gnHR31XnJjl0"; ## SECRET-DATA
    }
    services {
        ssh;
    }
}
interfaces {
    ge-0/0/2 {
        unit 0 {
            family inet {
                address 10.2.2.1/24;
            }
        }
    }
    ge-0/0/3 {
        unit 0 {
            family inet {
                address 10.4.4.2/30;  # Link til INET
            }
        }
    }
    st0 {
        unit 1 {
            family inet {
                address 192.168.100.2/30;  # Tunnel IP
            }
        }
    }
}
routing-options {
    static {
        route 10.1.1.0/24 next-hop 192.168.100.1;   # Tunnel peer
        route 0.0.0.0/0 next-hop 10.4.4.1;          # INET default route
    }
}

security {
    ike {
        proposal IKE-PROP {
            authentication-method pre-shared-keys;
            dh-group group5;
            authentication-algorithm sha1;
            encryption-algorithm aes-128-cbc;
            lifetime-seconds 36000;
        }
        policy IKE-POL {
            mode main;
            proposals IKE-PROP;
            pre-shared-key ascii-text "$1$4TkbZDtp$6E8C6Bg7K6gnHR31XnJjl0"; ## SECRET-DATA
        }
        gateway IKE-GW {
            ike-policy IKE-POL;
            address 10.3.3.1;                      # SRX-A public IP
            external-interface ge-0/0/3.0;
        }
    }
    ipsec {
        proposal IPSEC-PROP {
            protocol esp;
            authentication-algorithm hmac-sha1-96;
            encryption-algorithm aes-128-cbc;
            lifetime-seconds 36000;
        }
        policy IPSEC-POL {
            perfect-forward-secrecy {
                keys group5;
            }
            proposals IPSEC-PROP;
        }
        vpn IPSEC-VPN {
            bind-interface st0.1;
            ike {
                gateway IKE-GW;
                ipsec-policy IPSEC-POL;
            }
            establish-tunnels immediately;
        }
    }

    address-book {
        global {
            address Network-A 10.1.1.0/24;
            address Network-B 10.2.2.0/24;
        }
    }

    policies {
        from-zone trust to-zone untrust {
            policy trust-to-untrust {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }

        from-zone trust to-zone VPN {
            policy trust-to-VPN {
                match {
                    source-address Network-B;
                    destination-address Network-A;
                    application any;
                }
                then {
                    permit;
                }
            }
        }

        from-zone VPN to-zone trust {
            policy VPN-to-trust {
                match {
                    source-address Network-A;
                    destination-address Network-B;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }

    zones {
        security-zone trust {
            host-inbound-traffic {
                system-services {
                    all;
                }
                protocols {
                    all;
                }
            }
            interfaces {
                ge-0/0/2.0;
            }
        }

        security-zone untrust {
            host-inbound-traffic {
                system-services {
                    ike;
                    ping;
                }
            }
            interfaces {
                ge-0/0/3.0;
            }
        }

        security-zone VPN {
            host-inbound-traffic {
                system-services {
                    all;
                }
            }
            interfaces {
                st0.1;
            }
        }
    }
}
