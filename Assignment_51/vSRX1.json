## Assignment 49 OSPF routing protocol
/* Daniel */
version 12.1X47-D15.4;
system {
    host-name R1;
    /* User: root Password: Rootpass */
    root-authentication {
        encrypted-password "$1$xH9xJoL6$MFOUYnZr4.Qj2NM24XInz/";
    }
}
interfaces {
    ge-0/0/1 {
        unit 0 {
            family inet {
                /* Lan10 */
                address 10.10.12.2/28;
            }
        }
    }
    ge-0/0/2 {
        unit 0 {
            family inet {
                /* Lan5 */
                address 10.10.10.1/28;
            }
        }
    }
    ge-0/0/3 {
        unit 0 {
            family inet {
                /* Lan1 */
                address 192.168.13.1/24;
            }
        }
    }
    lo0 { 
        unit 0 { 
            family inet { 
                address 192.168.100.1/32;
            }
        }
    }
}
routing-options {
    router-id 192.168.100.1;
}
protocols {
    ospf {
        export route-to-USERLAN1;
        area 0.0.0.0 {
            interface lo0;
            interface ge-0/0/1.0 interface-type p2p;
            interface ge-0/0/2.0;
        }
    }
}            
/* Passive OSPF on lo0 so it is advertised but not used for adjacencies {
                interface-type p2p;
            }
            interface ge-0/0/2.0 {
                interface-type p2p;
            }
            interface lo0.0;
        }
    }
}
*/
policy-options {
    policy-statement route-to-USERLAN1 {
        term accept-route-to-USERLAN1 {
            from {
                route-filter 192.168.13.0/24 exact;
            }
            then accept;
        }
    }
}
security {
    policies {
        /* Policy so interfaces in R1_trust zone can intercommunicate */
        from-zone R1_trust to-zone R1_trust {
            policy default-permit {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
    zones {
        security-zone R1_trust {
            interfaces {
                ge-0/0/1.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                        protocols {
                            ospf;
                        }
                    }
                }
                ge-0/0/2.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                        protocols {
                            ospf;
                        }
                    }
                }
                ge-0/0/3.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                        protocols {
                            ospf;
                        }
                    }
                }
                lo0.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                        }
                    }
                }
            }
        }
    }
}
